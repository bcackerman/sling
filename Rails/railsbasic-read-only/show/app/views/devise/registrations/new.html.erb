<div class="page-canvas">
  <div class="setting-header">
    <h4><span class="setting-header-status-text">Join SkillDeveloping today.</span></h4>
  </div>
  <div class="setting-main">
    <div class="setting-wrapper">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="signup-inputs">
          <div><%= f.email_field :email, :placeholder=>"Email" %></div>
          <div><%= f.password_field :password, :placeholder=>"Password" %></div>
          <div><%= f.password_field :password_confirmation, :placeholder=>"Confirm Password" %></div>
        </div>
        <div class="signup-links">
          <div><%= f.submit "Create my account", :class => "btn btn-warning pull-left" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
