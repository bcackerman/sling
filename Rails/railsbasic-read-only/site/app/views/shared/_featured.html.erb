
<div id="carousel_container">
  <div id='carousel_inner'>
    <ul id='carousel_ul'>
      <% @featured.each do |answer| %>
        <li>
          <%= image_tag user_avatar_url(answer.user), :alt => answer.id %>
          <div class="play-stop"><%= link_to image_tag "play.png", :voice => post_voice_url(answer) %></div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="slider_scroll" id='left_scroll'><%= image_tag "prev_arrow.png" %></div>
  <div class="slider_scroll" id='right_scroll'><%= image_tag "next_arrow.png" %></div>
  <div class="speech-featured-dropdown">
    <!--%= render(:partial => 'shared/popup') %-->
  </div>
</div>
