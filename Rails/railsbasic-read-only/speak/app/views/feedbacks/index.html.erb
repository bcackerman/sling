<div class="form-main-wrapper">
  <div class="form-main-header form-main-header-red">
    <h4><span class="form-main-header-status">Feedbacks Listing</span></h4>
  </div>
  <div class="form-main-container form-main-container-wide">
    <div>
      <button type="button" class="btn">
        <span><%= link_to 'New Feedback', new_feedback_path %></span>
      </button>
    </div>

    <% @feedbacks.each do |feedback| %>
      <div class="span9 well" style="margin: 5px 0; position: relative; line-height: 20px;">
      
        <div style="float: left; width: 600px;">
          <div>
            <div><%= feedback.content %></div>
          </div>
        </div>
        
        <div  style="float: left; width: 150px;  padding-left: 20px;">
          <div>@ <%= time_ago_in_words(feedback.created_at) %> ago</div>
          <div><%= link_to 'Edit', edit_feedback_path(feedback) %></div>
        </div>

      </div>
    <% end %>
  </div>
</div>
