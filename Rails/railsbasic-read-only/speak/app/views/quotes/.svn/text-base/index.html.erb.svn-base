<div class="form-main-wrapper">
  <div class="form-main-header form-main-header-red">
    <h4><span class="form-main-header-status">Quotes Listing</span></h4>
  </div>
  <div class="form-main-container form-main-container-wide">
    <div>
      <button type="button" class="btn">
        <span><%= link_to 'New Quote', new_quote_path %></span>
      </button>
    </div>

    <% @quotes.each do |quote| %>
      <div class="span9 well" style="margin: 5px 0; position: relative; line-height: 20px;">
      
        <div style="float: left; width: 600px;">
          <div>
            <div><%= quote.content %></div>
            <div><em><%= quote.author %></em></div>
          </div>
        </div>
        
        <div  style="float: left; width: 150px;  padding-left: 20px;">
          <div>@ <%= time_ago_in_words(quote.created_at) %> ago</div>
          <div><%= link_to 'Edit', edit_quote_path(quote) %></div>
          <div><%= link_to 'Publish', edit_quote_path(quote) %></div>
          <div><%= link_to 'Remove', edit_quote_path(quote) %></div>
        </div>

      </div>
    <% end %>
  </div>
</div>
