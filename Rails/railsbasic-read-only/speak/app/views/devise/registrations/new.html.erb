<div class="form-main-wrapper">
  <div class="form-main-header form-main-header-blue">
    <h4><span class="form-main-header-status">Join <%= site_name_no_space %> today.</span></h4>
  </div>
  <div class="form-main-container">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true)  do |f| %>
      <div class="control-group">
        <%= f.label "Username" %>
        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label "Email" %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label "Password" %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label "Password Confirmation" %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div><%= f.submit "Create my account", :class => "btn btn-warning pull-left" %></div>
    <% end %>
  </div>
</div>
