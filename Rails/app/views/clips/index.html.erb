<h1>Listing clips</h1>

<table>
  <tr>
    <th>Name</th>
    <th>File</th>
    <th>Shortlink</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clips.each do |clip| %>
  <tr>
    <td><%= clip.name %></td>
    <td><%= clip.file %></td>
    <td><%= clip.shortlink %></td>
    <td><%= link_to 'Show', clip %></td>
    <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
    <td><%= link_to 'Destroy', clip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

