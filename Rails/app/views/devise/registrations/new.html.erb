<div class="text-center">
  <span class="brand">Quid</span>
</div>
<div class="row-fluid">
  <div id="devise-form">
    <div class="span12 page-bg">
      <h4 class="text-center">Sign Up</h4>
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, :required => true, :autofocus => true, label: false, input_html: {class: "span12"}, placeholder: "Email address" %>
          <%= f.input :password, :required => true, label: false, placeholder: "Password", input_html: {class: "span12"} %>
          <%= f.input :password_confirmation, :required => true, label: false, placeholder: "Password confirmation", input_html: {class: "span12"} %>
        </div>
        <div class="form-actions">
          <div class="text-center">
            <%= f.button :submit, "Sign up", class: "btn-flat large primary" %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
        
        
      <% end %>

      
    </div>
  </div>
</div>
