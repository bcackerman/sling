<div class="text-center">
  <span class="brand">Sling</span>
</div>
<div class="row-fluid">
  <div id="devise-form">
    <div class="span12 page-bg">
      <h4 class="text-center">Come on back in</h4>
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true, input_html: {class: "span12"} %>
          <%= f.input :password, :required => false, input_html: {class: "span12"} %>
          <%= f.input :remember_me, :as => :boolean, :inline_label => 'Remember me', :label => false if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <div class="text-center">
            <%= f.button :submit, "Sign in", class: "btn-flat large primary" %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
