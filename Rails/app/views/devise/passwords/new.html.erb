<div class="text-center">
  <span class="brand">Quid</span>
</div>
<div class="row-fluid">
  <div id="devise-form">
    <div class="span12 page-bg">
      <h4 class="text-center">Forgot password</h4>
      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true, input_html: {class: "span12"} %>
        </div>
        <div class="form-actions">
          <div class="text-center">
            <%= f.button :submit, "Reset my password", class: "btn-flat large primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
