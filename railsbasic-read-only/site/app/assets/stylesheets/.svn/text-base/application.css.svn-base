#carousel_container {
  position: relative;
  width: 960px;
  height: 96px;
  margin-top: 0px;
  margin-left: 0px;
  padding: 5px;
}

#carousel_inner {
  float:left; /* important for inline positioning */
  width:960px; /* important (this width = width of list item(including margin) * items shown */
  height: 96px;
  overflow: hidden;  /* important (hide the items outside the div) */
  /* non-important styling bellow */
}

#carousel_ul {
  position:relative;
  left:-480px; /* important (this should be negative number of list items width(including margin) */
  list-style-type: none; /* removing the default styling for unordered list items */
  margin: 0px;
  padding: 0px;
  width:9999px; /* important */
  /* non-important styling bellow */
}

#carousel_ul li{
  float: left; /* important for inline positioning of the list items */
  width:90px;  /* fixed width, important */
  /* just styling bellow*/
  padding:0px;
  height:90px;
  margin:3px;
}

#carousel_ul li img {
  width: 90px;
  height: 90px;
}

#left_scroll {
  display:none;
  position:absolute;
  left:7px;
  top:8px;
  height:96px;
  width:30px;
  z-index: 14;
  background-color: rgba(0, 0, 0, 0.3);
}

 #right_scroll {
  display:none;
  position:absolute;
  right:8px;
  top:8px;
  height:96px;
  width:30px;
  z-index: 14;
  background-color: rgba(0, 0, 0, 0.3);
}

#left_scroll img, #right_scroll img {
  border:0; /* remove the default border of linked image */
