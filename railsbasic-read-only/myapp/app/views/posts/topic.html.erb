<% title "Topic" %>

<%= render(:partial => 'shared/ads') %>

<div id="post_frame">
  <p>
    <span id="post_title">Topic View</span>
  </p>

  <div id="post_list">
    </br>
    <% for post in @post %>
      <div class="post_widget">
        <div class="echo_links">
          <div class="echo_avatar"><%= link_to image_tag avatar_url(post.user), :title => "Play Voice", :voice => voice_url(post) %></div>
          <div class="echo_topic"></div>
        </div>
        <div class="echo_text">
          <p>
            <%= link_to post.user.username, profile_url(post.user) %>
            <%= image_tag("flags/#{post.language}_small.png", :title => post.language) %>
            <%= post.text_entry %>
            <em><%= l post.created_at %></em>
            <% if !post.is_reply %>
              <span class="echo_reply"><%= link_to 'echo', reply_post_path(post) %></span>
            <% end %>
          </p>
        </div>
      </div>
      </br>
    <% end %>
    <%= paginate @post %>
  </div>

  <div class="post_nav">
    <%= link_to 'New Topic', new_post_path %>
  </div>
</div>

